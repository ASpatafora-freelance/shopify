{% assign blog = section.settings.new-blog %}
{{ blog.articles_count }}

{% unless blog.articles_count == 0 %}
   {% for article in blog.articles %}
      <p>titolo:
      {{ article.title }}
      {{ article.url }}
      </p>
     <img src="{{ article.image | img_url: '350x' }}"/>
   {% endfor %}
{% endunless %}

{% schema %}
  {
    "name": "blog fetch",
    "settings": [
      {
      "id":"liquid_postr",
      "type":"range",
      "label":"Range",
      "min":3,
      "max":12,
      "step":3,
      "unit":"#ed",
      "default": 3
      },
      {
        "id":"new-blog",
        "type":"blog",
        "label":"Blog"
      }
    ],
    "templates": ["index", "page", "product"],
    "presets": [
    {
      "name": "blog fetch",
      "category": "Posts"
    }
  ]
  }
{% endschema %}