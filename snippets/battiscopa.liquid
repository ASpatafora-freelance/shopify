{% include "prod-data" %}
{% assign proid = product.title | string %}
{% assign gx = 0 %}
{% assign bx = 0 %}
battiscopa:
{{ product.selected_variant.id }}
<ul>
{% for i in arr %}
    {% if proid == i %}
      {% assign prostat = battiarr[gx] | size %}
      {% assign descstat = battiarr[gx] %}
      <li>
          {% for j in (0..prostat) %}
               {% assign para = descstat | slice: j %}
               {% if ',' == para %}
                 </li><li>
               {% else %}
                 {{ descstat | slice: j  }}
               {% endif %}
          {% endfor %}
      </li>
    {% endif %}
  {% assign gx = gx | plus: 1 %}
{% endfor %}
</ul>
{{ product.selected_variant.id }}
{% for varid in product.variants %}
    {% if varid.id == product.selected_variant.id %}
  <a href="{{ request.origin }}{{ request.path }}?variant={{ product.variants[1].id }}">
      <button>
        Aggiungi battiscopa
      </button>
  </a>
    {% endif %}
{% endfor %}
