{% include "prod-data" %}
{% assign proid = product.title | string %}
{% assign gx = 0 %}
{% for varid in product.variants %}
{% if varid.id != product.selected_variant.id %}
  {% assign variantbat = varid.id %}
{% endif %}
{% endfor %}

{{ request.origin }}
{{ request.path }}
battiscopa:
<ul>
{% for i in arr %}
    {% if proid == i %}
      {% assign prostat = battiarr[gx] | size %}
      {% assign descstat = battiarr[gx] %}
      <li>
          {% for j in (0..prostat) %}
               {% assign para = descstat | slice: j %}
               {% if ',' == para %}
                 </li><li>
               {% else %}
                 {{ descstat | slice: j  }}
               {% endif %}
          {% endfor %}
      </li>
  <a href="{{ request.origin }}{{ request.path }}?variant={{ variantbat }}">
      <button>
        Aggiungi battiscopa
      </button>
  </a>
    {% endif %}
  {% assign gx = gx | plus: 1 %}
{% endfor %}
</ul>
