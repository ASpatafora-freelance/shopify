
{% assign arrsp = ";Waterfall Dark" | split: ";" %}
{% assign sparr = ";red,red,metal" | split: ";" %}
{% assign proidsps = product.title | string %}
{% assign spc = false %}
{% assign spcx = false %}
{% assign spcxd = false %}
{% assign gxxd = 0 %}
{% for i in arrsp %}
    {% if proidsps == i %}
      
        {% assign spc = true %}
  
    {% endif %}
  {% assign edr = i | split: " " %}  
  {% for nedr in edr %}
  {% if proidsps contains nedr %}
      {% assign spcx = true %}
  {% else %}
      {% assign spcx = false %}
  {% endif %}
  {% endfor %}
  {% if spcx == true %}
    {% assign spcxd = true %}
{% assign er = sparr[gxxd] %}
  {% endif %}
  {% if  spcx == false and spc == false %}
  {% assign gxxd = gxxd | plus: 1 %}
  {% endif %}
{% endfor %}
{% for i in arrsp %}
  {% for coll in product.collections %}
{% if i == coll.title %}

        {% assign spc = true %}
    {% endif %}
{% endfor %}
{% endfor %}

